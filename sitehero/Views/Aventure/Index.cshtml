@using sitehero.Core.Data
@using sitehero.Core.Data.Models
@model List<Aventure>

@{


}

<h1 class="text-center">@ViewBag.Title</h1>

<div class="row">
    <div class="col text-center">
        <a class="btn btn-secondary small my-3" asp-controller="Aventure" asp-action="Create" style="text-decoration:none; color:white">
            Nouvelle Aventure
        </a>
    </div>
</div>

<div class="h2 text-center small my-3">Vos dernières aventures</div>
<div class="row justify-content-center">
    @foreach (var aventure in Model)
    {
        <div class="card border m-2 text-center" style="width:9rem">
            <div class="card-title">
                <h5>@aventure.Titre</h5>
            </div>
            <div class="card-body">
                <a href="#" style="text-decoration:none">GO</a>
            </div>
        </div>
    }
</div>



